<% @news.each do |news| %>
      <article class="news-item">
          
        <div class="col s12 m6 l4">

          <div class="card horizontal hoverable card-news" onclick="window.open('<%= news_url(news) %>', '_self');">
            <div class="card-image grey lighten-2">
              <%= link_to news do %>
                <% unless news.image.blank? or news.image.nil? %>
                  <%= image_tag news.image %>
                <% else %>
                  <div class="news-no-image"><span>Sin <br>Im√°gen</span></div>
                <% end %>
              <% end %>
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <h3 class="card-title">
                  <%= news.title %>
                </h3>
                <!-- <p><%#= news.description.truncate(160) %></p> -->
                <div class="row info-and-action vertical-bottom">
                  <div class="col s12 m12 l6">
                    <span class="left blue-grey-text text-lighten-3">
                      <%= news.editor %>                
                    </span><br>
                    <time class="left blue-grey-text text-lighten-3 hide-on-small-only"><%= 'Hace ' + time_ago_in_words(news.published_at) || 'Hace ' + time_ago_in_words(news.created_at) %></time>
                  </div>
                  <div class="col s12 m12 l6 right-align vertical-bottom">
                    
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
                  
      </article>
    <% end %>