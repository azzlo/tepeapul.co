<div class="row valign-wrapper">
   <div class="col s12">
    <h2>Eventos <%= link_to '<i class="medium material-icons">fiber_new</i>'.html_safe, new_event_path if user_signed_in? and current_user.admin%></h2>
  </div>
</div>


<section>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col s12 m6 l3">
        <div class="card small card-event">
          <div class="card-image">
            <img src="https://upload.wikimedia.org/wikipedia/commons/1/1f/Soda_bubbles_macro.jpg">
            <span class="card-title"><%= event.title %></span>
          </div>
          <div class="card-content">

            <div class="card-info">
              <span>
                <% if event.date == Date.today %>
                  <%= 'HOY' %>
                <% else  %>
                  <% if (event.date - Date.today).to_i == 1  %>
                    <%= 'FALTA 1 DÍA' %>  
                  <% else %>
                    <%= 'FALTAN ' + (event.date - Date.today).to_i.to_s + ' DÍAS'%>  
                  <% end %>
                <% end %>
              </span>
              <address><%= event.address %></address>
            </div>

            <p><%= event.description.truncate(80) %></p>

          </div>
          <% if user_signed_in? and current_user.admin %>
            <div class="card-action">
              <a href="#">This is a link</a>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <div class="col s12 m12 l12 center">
      <%= link_to 'Ver todos los eventos', events_path, class: 'btn btn-large' %>
    </div>
  </div>
</section>



<div class="row valign-wrapper">
  <div class="col s12">
    <h2>Noticias <%= link_to '<i class="medium material-icons">fiber_new</i>'.html_safe, new_news_path if user_signed_in? and current_user.admin%></h2>
  </div>
</div>
<section>
  <div class="row">
    <% @news.each do |new| %>
      <article class="news-item">
          
        <div class="col s12 m6 l4">
          <h3 class="header hide-on-med-and-up">
            <a href="<%= new.url %>" target="_blank" class="blue-grey-text text-darken-3" ><%= new.title %></a>
          </h3>
          <div class="card horizontal card-news">
            <div class="card-image">
              <% unless new.image.blank? or new.image.nil? %>
                <%= image_tag new.image %>
              <% else %>
                <div class="news-no-image"><span>Sin <br>Imágen</span></div>
              <% end %>
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <h3 class="card-title hide-on-small-only">
                  <a href="<%= new.url %>" target="_blank" class="blue-grey-text text-darken-3" ><%= new.title %></a>
                </h3>
                <p><%= new.description.truncate(160) %></p>
                <div class="row info-and-action">
                  <div class="col s12 m12 l12">
                    <span class="left blue-grey-text text-lighten-3">
                      <%= new.editor %>                
                    </span>
                    <time class="right blue-grey-text text-lighten-3 hide-on-small-only"><%= new.published_at || new.created_at %></time>
                  </div>
                </div>
              </div>
              <% if user_signed_in? %>
                <% if current_user.admin %>
                  <div class="card-action">
                    <%= link_to 'Editar', edit_news_path(new) %>
                    <%= link_to 'Eliminar', news_path(new), method: :delete, data: { confirm: '¿Estas seguro?' } %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
                  
      </article>
    <% end %>

    <div class="col s12 m12 l12 center">
      <%= link_to 'Ver todas las noticias', news_index_path, class: 'btn btn-large' %>
    </div>
  </div>
</section>
