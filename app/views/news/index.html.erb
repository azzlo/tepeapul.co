
<div class="row valign-wrapper">
  <div class="col s12">
    <h2>Noticias <%= link_to '<i class="medium material-icons">fiber_new</i>'.html_safe, new_news_path if user_signed_in? and current_user.admin%></h2>
  </div>
</div>
<section>
  <div class="row">
    <% @news.each do |new| %>
      <article class="news-item">
          
        <div class="col s12 m6 l4">

          <div class="card horizontal hoverable card-news">
            <div class="card-image grey lighten-2" onclick="window.open('<%= new.url %>', '_blank');">
              <% unless new.image.blank? or new.image.nil? %>
                <%= image_tag new.image %>
              <% else %>
                <div class="news-no-image"><span>Sin <br>Imágen</span></div>
              <% end %>
            </div>
            <div class="card-stacked">
              <div class="card-content" onclick="window.open('<%= new.url %>', '_blank');">
                <h3 class="card-title">
                  <%= new.title %>
                </h3>
                <!-- <p><%#= new.description.truncate(160) %></p> -->
                <div class="row info-and-action">
                  <div class="col s12 m12 l12">
                    <span class="left blue-grey-text text-lighten-3">
                      <%= new.editor %>                
                    </span>
                    <time class="right blue-grey-text text-lighten-3 hide-on-small-only"><%= new.published_at || new.created_at %></time>
                  </div>
                </div>
              </div>
              <% if user_signed_in? %>
                <% if current_user.admin %>
                  <div class="card-action">
                    <%= link_to 'Editar', edit_news_path(new) %>
                    <%= link_to 'Eliminar', news_path(new), method: :delete, data: { confirm: '¿Estas seguro?' } %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>


        </div>
                  
      </article>
    <% end %>

  </div>

  <div class="row">
    <div class="col s12 center">
      <%= paginate @news %>
    </div>
  </div>
</section>
