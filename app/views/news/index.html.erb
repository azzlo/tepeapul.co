<p id="notice"><%= notice %></p>

<h1>News for Tepeapulco <small>Apan, Zempoala, Emiliano Zapata...</small></h1>

<section>
  <% @news.each do |news| %>
    <article class="news-item">
      <div class="row">
        <div class="col s12 m6 l4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <h2 class="card-title"><%= news.title %></h2>
              <cite>El Reportero</cite>
              <p><%= news.description %></p>
            </div>
            <div class="card-action right-align">
              <a target="_blank" href="<%= news.url %>">Ver la Nota Completa</a>
              <% if current_user && current_user.admin %>
                <div class="admin_actions">
                  <%= link_to 'Show', news %>
                  <%= link_to 'Edit', edit_news_path(news) %>
                  <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </article>
  <% end %>
</section>
