<% content_for :title, @news.title %>
<% content_for :head do %>
  <meta property="og:url"           content="<%= news_url(@news) %>" />
  <meta property="og:type"          content="website" />
  <meta property="og:title"         content="<%= @news.title %>" />
  <meta property="og:description"   content="<%= @news.description %>" />
  <meta property="og:image"         content="<%= @news.image %>" />
<% end %>

<div class="container">
    
    <div class="row">
      <div class="col s12 m10 l8 offset-m1 offset-l2">
        <div class="card">
          <div class="card-image">
            <img src="<%= @news.image %>">
          </div>
          <div class="card-content">
            <h1 class="card-title"><%= @news.title %></h1>
            <p><%= @news.description %></p>
          </div>

          <div class="card-action">
            <div class="row">
              <div class="col s12 m4 l6">
                <span class="blue-grey-text text-lighten-1"><%= @news.editor %></span><br>
                <span class="blue-grey-text text-lighten-3"><%= @news.published_at.strftime('%d-%m-%Y') %></span>
              </div>
              <div class="col s12 m8 l6 right-align">
                <%= link_to @news.url,  class: 'btn btn-large blue accent-3', target: '_blank' do %>
                  <i class="material-icons left">open_in_new</i>
                  Ver la noticia completa
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col s12 m10 l8 offset-m1 offset-l2 right-align">
        <div class="fb-share-button" data-href="<%= news_url @news %>" data-layout="button_count" data-size="large" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2F127.0.0.1%3A3000%2Fnoticias%2F814&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div>
      </div>
    </div>

</div>

