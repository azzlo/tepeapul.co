<%= render 'nav' %>
<div class="container">
  <div class="row">
    <div class="col s12">
      <h1 class="center">Configuraciones de Aplicación</h1>
    </div>

    <div class="col s12 l8 offset-l2">
      <table class="striped">
        <thead>
          <tr class="blue-grey darken-1 white-text">
            <th>Configuración</th>
            <th>Valor</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @application_settings.each do |application_setting| %>
            <tr>
              <td><%= application_setting.setting %></td>
              <td><%= application_setting.value %></td>
              <td><%= link_to 'Cambiar', edit_application_setting_path(application_setting), class: 'btn' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
