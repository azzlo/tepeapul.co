<!DOCTYPE html>
<html>
  <head>
    <title>Tepeapulco, Hidalgo, Mexico.</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, user-scalable=no" initial-scale="1.0">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav>
      <div class="nav-wrapper cyan">
        <a href="<%= root_url %>" class="brand-logo center"><i><%= image_tag 'escudo_tepeapulco_logo.png', class: 'material-icons hide-on-small-only' %></i> Tepeapulco</a>
        <%# link_to :Tepea, root_url, class: 'brand-logo' %>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
          <li><%= link_to 'Noticias', news_index_path %></li>
          <li><%= link_to 'Fotos', photos_path %></li>
          <li><a href="#">Lugares</a></li>
          <li><a href="#">Xihuingo</a></li>
          <li id="mapClose"> 
            <a href="#" class="blue-grey darken-4"><i class="material-icons left">close</i>Cerrar Mapa</a>
          </li>

          <% if user_signed_in? %>
            <li>
               <a class='dropdown-button btn' href='#' data-activates='dropdown1'><%= current_user.email %></a>

                <!-- Dropdown Structure -->
                <ul id='dropdown1' class='dropdown-content'>
                  <li class="divider"></li>
                  <li>
                    <%= link_to(destroy_user_session_path, method: :delete)  do %>
                      <i class="material-icons">exit_to_app</i>Salir
                    <% end %>
                  </li>
                </ul>
            </li>
          <% else %>
            <li>
              <%= link_to('Ingresar', new_user_session_path, class: 'btn  lime accent-4 blue-grey-text text-darken-2')  %>  
            </li>
          <% end %>

        </ul>

        <ul class="side-nav" id="mobile-demo">
          <li><%= link_to 'Noticias', news_index_path %></li>
          <li><%= link_to 'Fotos', photos_path %></li>
          <li><a href="#">Lugares</a></li>
          <li><a href="#">Xihuingo</a></li>
        </ul>
      </div>
    </nav>

    <div class="flashmessage">
      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
        <div class="alert"><%= flash[:alert] %></div>
      <% elsif flash[:error] %>
        <div class="error"><%= flash[:error] %></div>
      <% elsif flash[:before_login] %>
        <div class="before_login"><%= flash[:before_login] %></div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
