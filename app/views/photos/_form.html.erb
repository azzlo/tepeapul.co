<%= form_with(model: photo, local: true) do |form| %>
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :photo, 'Foto' %>
    <% if @photo.photo.present? %>
      <%= image_tag event.photo_url, width: '100%' %>
    <% end %>
    <%= form.hidden_field :photo, value: form.object.cached_photo_data %>
    <%= form.file_field :photo %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :photo_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
