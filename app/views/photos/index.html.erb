<div class="row">
  <div class="col l6 offset-l3">
    <h1 class="center-align">Fotos</h1>
  </div>
</div>

<div class="row">
  <% @photos.each do |photo| %>

      <div class="col s12 m8 l6 xl6 offset-m2 offset-l3 offset-xl3">
        <div class="card photo-card">
          <div class="card-image">
            <%= image_tag photo.photo_url(:large) %>
              <div class="chip grey lighten-5">
                <% if user_signed_in? and current_user.image.present? %>
                  <%= image_tag current_user.image %>
                <% else %>
                  <%= image_tag 'blank_profile_small.png' %>
                <% end %>
                <%#= image_tag 'escudo_tepeapulco_logo.png', alt: 'Contact Person' %>
                <%= photo.user.name %>
              </div>
            <!-- <span class="card-title">Card Title</span> -->

            <!-- ###### Uncomment follow to enable element favs in card -->

            <!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">favorite_border</i></a> -->
          </div>
          <div class="card-content">
            <time class="blue-grey-text text-lighten-2"><%= time_ago_in_words(photo.created_at) %></time>
            <p><%= photo.description %></p>
          </div>
        </div>
      </div>
  <% end %>
</div>

<% if user_signed_in? %>
 <a id="btn-new-photo" href="<%= new_photo_path %>" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
<% end %>