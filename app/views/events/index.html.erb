<p id="notice"><%= notice %></p>

<h1>Eventos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Dirección</th>
      <th>Fecha</th>
      <th>Detalles</th>
      <th>Usuario</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.address %></td>
        <td><%= event.date %></td>
        <td><%= event.description %></td>
        <td><%= event.user %></td>
        <td><%= event.image_data %></td>
        <td><%= link_to 'Ver', event %></td>
        <td><%= link_to 'Editar', edit_event_path(event) %></td>
        <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="material-icons right">add_circle</i> Nuevo Evento'.html_safe, new_event_path, class: 'btn light-green accent-4' %>
